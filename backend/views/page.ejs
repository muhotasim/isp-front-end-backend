<%- include('./partials/header'); -%>
<div class="cms-page">
  
<% if(sectionData.length===0) {%>
  <div class="container" style="padding-top: 35px;">
    <h2><%- title %></h2>
    <%- content_body %>
  </div>
<% } %>
<% for(let section of sectionData) {%>
  <!-- slider block start-->
  <% if(section.type == 'slider') {%>
    <div class="container">
      <div id="slider-item" class="carousel slide  animated slideInRight" data-ride="carousel">
          <div class="carousel-inner">
            <% for(let contentIndex in section.contents) {%>
            <div class="carousel-item <% if(contentIndex==0){ %>active <% } %>">
              <div class="row">
                <div class="col-6">
                  <div class="slider-content">
                    <h4 class="animated bounceIn"><%- section['contents'][contentIndex].title %></h4>
                   <div class="animated bounceIn"> <%- section['contents'][contentIndex].content_body  %></div>
                  </div>
                </div>
                <div class="col-6">
                  <img class="d-block w-100 animated bounceIn" src="<%-site_url %>/<%- section['contents'][contentIndex].image  %>" alt="<%- section['contents'][contentIndex].title %>">
                </div>
              </div>
            </div>
            <% } %>
          </div>
          <a class="carousel-control-prev" href="#slider-item" role="button" data-slide="prev">
            <span class="fa fa-angle-left fa-2x" style="color: red;"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#slider-item" role="button" data-slide="next">
            <span class="fa fa-angle-right fa-2x" style="color: red;"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
  </div>
  <% } %>

  <% if(section.type == 'slider-2') {%>
    <div class="container">
      <div id="slider-item" class="carousel slide  animated slideInRight" data-ride="carousel">
          <div class="carousel-inner">
            <% for(let contentIndex in section.contents) {%>
            <div class="carousel-item <% if(contentIndex==0){ %>active <% } %>">
              <img class="d-block w-100 animated bounceIn" src="<%-site_url %>/<%- section['contents'][contentIndex].image  %>" alt="<%- section['contents'][contentIndex].title %>">
              <div class="carousel-caption d-none d-md-block">
                <%- section['contents'][contentIndex].content_body  %>
              </div>
            </div>
            <% } %>
          </div>
          <a class="carousel-control-prev" href="#slider-item" role="button" data-slide="prev">
            <!-- <span class="carousel-control-prev-icon" aria-hidden="true"></span> -->
            <span class="fa fa-angle-left fa-2x" style="color: red;"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#slider-item" role="button" data-slide="next">
            <span class="fa fa-angle-right fa-2x" style="color: red;"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
  </div>
  <% } %>
    <!-- slider block end-->
  <!-- post block start-->
  <% if(section.type == 'post') {%>
    <div class="container">
      <% for(let contentIndex in section.contents) {%>
        <div class="post-block animated slideInLeft">
          <div class="row">
            <div class="col-md-5 col-sm-6 col-12">
              <div class="section-heading mt-30">
                <h4><%- section['contents'][contentIndex].title %></h4>
                
              </div>
              <div class="text-content mt-25">
                <%- section['contents'][contentIndex].content_body  %>
              </div>
            </div>
            <div class="col-md-7 col-sm-6 col-12 mt-n3 mmt-0">
              <img class="d-block w-100" src="<%-site_url %>/<%- section['contents'][contentIndex].image  %>" alt="<%- section['contents'][contentIndex].title %>">
            </div>
          </div>
        </div>
      <% } %>
  </div>
  <% } %>
    <!-- post block end-->


    <!-- popular package start-->
  <% if(section.type == 'popular-package') {%>
    <div class="container">
      <% for(let contentIndex in section.contents) {%>
        <div class="popular-package-block">
          <div class="row">
            <div class="col-md-5 col-sm-6 col-12">
              <div class="single-package">
                <div class="card">
                  <h5 class="card-title"><%- section['contents'][contentIndex].title %></h5>
                  <div class="card-body">
                    <p class="card-text"><%- section['contents'][contentIndex].content_body  %></p>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-7 col-sm-6 col-12 mt-n3 mmt-0">
              <% if(section['contents'][contentIndex].image){ %>
                <img class="d-block w-100" src="<%-site_url %>/<%- section['contents'][contentIndex].image  %>" alt="<%- section['contents'][contentIndex].title %>">
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
  </div>
  <% } %>
    <!-- popular package end-->


    <!-- all package start-->
    <% if(section.type == 'package') {%>
      <div class="container  animated slideInLeft">
        <div class="all-package-block">
          <div class="row">
              <% for(let contentIndex in section.contents) {%>
                <div class="col-md-4 col-sm-2 col-12">

                    <div class="single-package">
                      <div class="card">
                        <% if(section['contents'][contentIndex].image){ %>
                        <img class="card-img-top" src="<%-site_url %>/<%- section['contents'][contentIndex].image  %>" alt="Card image cap">
                        <% } %>
                        <h5 class="card-title"><%- section['contents'][contentIndex].title %></h5>
                        <div class="card-body">
                          <p class="card-text"><%- section['contents'][contentIndex].content_body  %></p>
                        </div>
                      </div>
                    </div>
                      
                </div>
              <% } %>
        </div>
      </div>
    </div>
    <% } %>
      <!-- popular package end-->
  <!-- client-block  start-->
  <% if(section.type == 'client') {%>
    <div class="container">
      <div class="clients-block animated slideInRight">
          <div class="row">
            <% for(let contentIndex in section.contents) {%>
              <div class="col-md-2 col-sm-3 col-3">
             
                <div class="client-info">
                  <% if(section['contents'][contentIndex].image){ %>
                    <img class="d-block w-100" src="<%-site_url %>/<%- section['contents'][contentIndex].image  %>" alt="<%- section['contents'][contentIndex].title %>">  
                  <% } %>
                    <div class="section-heading mt-30">
                      <h4><%- section['contents'][contentIndex].title %></h4>
                    </div>
                    <div class="text-content mt-25">
                      <%- section['contents'][contentIndex].content_body  %>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
  </div>
  <% } %>
  <!-- client-block block end-->

  <% if(section.type == 'section-title') {%>
    <div class="container">
      <div class="section-title animated bounceIn">
        <h4><%- section.title %></h4>
      </div>
    </div>
  <% } %>

  
  <% if(section.type == 'details-only') {%>
    <div class="container">
      <% for(let contentIndex in section.contents) {%>
        <div class="details-only animated bounceIn">
          <div class="text-content">
          <%- section['contents'][contentIndex].content_body  %>
          </div>
        </div>
      <% } %>
    </div>
    <p class="clearfix"></p>
  <% } %>

  <% if(section.type == 'section-title-with-content') {%>
    <div class="container">
      <% for(let contentIndex in section.contents) {%>
        <div class="section-title-with-content animated bounceIn">
          <h4><%- section['contents'][contentIndex].title  %></h4>
          <div class="text-content">
          <%- section['contents'][contentIndex].content_body  %>
          </div>
        </div>
      <% } %>
    </div>
  <% } %>

  <% if(section.type == 'page-title-section') {%>
      <% for(let contentIndex in section.contents) {%>
        <div class="page-title-block animated slideInRight" style="background-image: url('<%-site_url %>/<%- section['contents'][contentIndex].image  %>');">
          <div class="container">
            <div class="page-title-info">
              <div class="section-heading mt-30">
                <h4><%- section['contents'][contentIndex].title %></h4>
              </div>
              <div class="text-content mt-25">
                <%- section['contents'][contentIndex].content_body  %>
            </div>
          </div>
          </div>
        </div>
      <% } %>
  <% } %>
  

<% if(section.type == 'address') {%>
  <div class="container">
    <div class="feature-block">
        <div class="row">
          <% for(let contentIndex in section.contents) {%>
            <div class="col-lg-4 col-md-4 col-sm-6 col-6">
           
              <div class="feature-info  animated bounceIn">
                <% if(section['contents'][contentIndex].image){ %>
                  <img class="d-block" src="<%-site_url %>/<%- section['contents'][contentIndex].image  %>" alt="<%- section['contents'][contentIndex].title %>">  
                <% } %>
                  <div class="details">
                    <div class="section-heading mt-30">
                      <h4><%- section['contents'][contentIndex].title %></h4>
                    </div>
                    <div class="text-content mt-25">
                      <%- section['contents'][contentIndex].content_body  %>
                  </div>
                  </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
</div>
<% } %>
<% } %>

</div>

<%- include('./partials/footer'); -%>
